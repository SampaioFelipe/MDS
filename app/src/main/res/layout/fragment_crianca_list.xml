<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<android.support.v7.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:name="br.ufscar.dc.mds.curumim.activities.homeFragments.CriancaFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    app:layoutManager="LinearLayoutManager"
    tools:context="br.ufscar.dc.mds.curumim.activities.homeFragments.CriancaFragment"
    tools:listitem="@layout/fragment_crianca_list_row" />

        <android.support.design.widget.FloatingActionButton
        android:id="@+id/botaoAdicionarPerfilCrianca"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="bottom|end"
            android:layout_weight="1"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="11dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_add"
        app:layout_behavior="br.ufscar.dc.mds.curumim.FadeFloatingButtonBehavior" />

</LinearLayout>