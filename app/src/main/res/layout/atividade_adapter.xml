<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeightLarge"
    android:padding="6dip">

    <TextView
        android:textSize="17sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/nomeAtividade"
        android:layout_width="wrap_content"
        android:text="Nome da atividade"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <TextView
        android:text="Nome do local"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/localAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/nomeAtividade"/>

    <TextView
        android:text="10/01/2017, 15:00"
        android:id="@+id/horarioAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/localAtividade" />

</RelativeLayout>